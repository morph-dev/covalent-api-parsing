{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    
    /* Modules */
    "module": "commonjs",
    "resolveJsonModule": true,

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Emit */
    "noEmit": true,

    /* Type Checking */
    "strict": true,
 
    /* Completeness */
    "skipLibCheck": true
  }
}
